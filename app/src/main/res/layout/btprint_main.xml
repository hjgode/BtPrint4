<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:weightSum="1">


    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="eXit" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/remote_device"
        android:textAlignment="center"
        android:layout_column="0"
        android:background="@android:color/white"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:text="@string/bt_default_address"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:inputType="textNoSuggestions"
        android:selectAllOnFocus="true"
        />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingEnd="4dp"
        android:paddingStart="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        >

        <Button
            android:layout_width="@dimen/button_width"
            android:layout_height="wrap_content"
            android:text="@string/button_scan"
            android:id="@+id/button_scan"
            android:minWidth="180dp"
            android:layout_weight="0.5"
            android:drawableLeft="@drawable/radar"
            />

        <Button
            android:layout_width="@dimen/button_width"
            android:layout_height="wrap_content"
            android:text="@string/button_connect_text"
            android:id="@+id/buttonConnect"
            android:minWidth="180dp"
            android:layout_gravity="right"
            android:layout_weight="0.5"
            android:drawableLeft="@drawable/connectme" />
    </LinearLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="tap [select demo]"
        android:id="@+id/txtFileName"
        android:maxLines="1"
        android:background="@android:color/white"
        android:paddingTop="4dp"
        android:paddingBottom="4dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:id="@+id/linLayoutSelectPrint"
        >

        <Button
            android:layout_width="@dimen/button_width"
            android:layout_height="wrap_content"
            android:text="@string/button_select_file_text"
            android:id="@+id/btnSelectFile"
            android:minWidth="180dp"
            android:layout_weight="0.5"
            android:drawableLeft="@drawable/paper" />

        <Button
            android:layout_width="@dimen/button_width"
            android:layout_height="wrap_content"
            android:text="@string/button_print_text"
            android:id="@+id/btnPrintFile"
            android:minWidth="180dp"
            android:layout_gravity="right"
            android:layout_weight="0.5"
            android:drawableLeft="@drawable/pb42"
            />
    </LinearLayout>

    <TextView
        android:textSize="14.0dip"
        android:textColor="#ff808080"
        android:id="@+id/log"
        android:background="#ff000000"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text=""
        android:scrollbars="vertical"
        android:maxHeight="100dp"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="64dp"
        android:id="@+id/imageView"
        android:scaleType="fitCenter"
        android:src="@drawable/intermec"
        />

</LinearLayout>
